{
  "version": 2,
  "builds": [
    {
      "src": "./src/app.js",
      "use": "@vercel/node"
    },
    {
      "src": "src/public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/public/(.*)",
      "dest": "/src/public/$1"
    },
    {
      "src": "/api/(.*)",
      "dest": "./src/app.js"
    },
    {
      "src": "/(.*)",
      "dest": "./src/app.js"
    }
  ]
} 